@using FinalProject.MVC.ViewModels
@model CreateRoleFormViewModel

@{
    ViewData["Title"] = "Add Role";
}

<h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new Role
</h5>

<form asp-controller="Role" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="RoleName" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-4 rounded-2">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}