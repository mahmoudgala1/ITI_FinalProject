@model IEnumerable<Role>

@{
    ViewData["Title"] = "Roles";
}

<a class="btn btn-outline-primary mb-3 rounded-2 btn-lg" asp-controller="Role" asp-action="Create">
    <i class="bi bi-plus-circle-dotted"></i>
    Add Role
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h1 class="alert-heading">No roles!</h1>
        <p>No roles were added yet.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-hover table-bordered table-striped text-center table-primary">
            <tr class="table-primary">
                <th>Name</th>
                <th>Actions</th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-outline-info rounded-2 mx-1" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a href="javascript:;" data-id="@role.Id" class="btn btn-outline-danger rounded-2 js-delete">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
}

@section Scripts {
    <script src="~/js/DeleteRole.js" asp-append-version="true"></script>
}